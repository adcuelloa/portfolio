---
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
import { getLangFromUrl, useTranslations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const basePath = lang === "es" ? "/es/" : "/";

const navItems = [
  {
    title: t("nav.experience"),
    label: t("slugs.experience"),
    url: `${basePath}#${t("slugs.experience")}`,
  },
  {
    title: t("nav.projects"),
    label: t("slugs.projects"),
    url: `${basePath}#${t("slugs.projects")}`,
  },
  {
    title: t("nav.about"),
    label: t("slugs.about"),
    url: `${basePath}#${t("slugs.about")}`,
  },
  {
    title: t("nav.contact"),
    label: t("slugs.contact"),
    url: "mailto:adcuelloa@gmail.com",
  },
];
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
  <nav
    class="flex px-3 py-1 text-xs sm:text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center backdrop-blur-md bg-white/70 dark:bg-gray-900/70 border border-gray-200/20 dark:border-gray-700/30 shadow-lg"
  >
    {
      navItems.map((link) => (
        <a
          class="relative block px-2 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
    <LanguageToggle />
    <ThemeToggle />
  </nav>
</header>

<script>
  function setupIntersectionObserver() {
    const sections = document.querySelectorAll("section[id]");
    const navItems = document.querySelectorAll("header nav a[aria-label]");

    if (sections.length === 0 || navItems.length === 0) return;

    // Get all valid section IDs
    const sectionIds = new Set(Array.from(sections).map((s) => s.id));

    const callback = (entries: IntersectionObserverEntry[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            const label = item.getAttribute("aria-label");
            // Only toggle class if this link corresponds to a section
            if (label && sectionIds.has(label)) {
              if (label === entry.target.id) {
                item.classList.add("text-blue-500");
              } else {
                item.classList.remove("text-blue-500");
              }
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  }

  // Run on initial load
  document.addEventListener("DOMContentLoaded", setupIntersectionObserver);

  // Also run on Astro page transitions (if View Transitions are enabled)
  document.addEventListener("astro:page-load", setupIntersectionObserver);
</script>

<style>
  header nav a::after {
    content: "";
    position: absolute;
    bottom: 2px;
    left: 50%;
    width: 80%;
    height: 2px;
    background-color: currentColor;
    transform: translateX(-50%) scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: center;
  }

  header nav a:hover::after,
  header nav a.text-blue-500::after {
    transform: translateX(-50%) scaleX(1);
  }
</style>
