---
import GitHub from "./icons/GitHub.astro";
import Tailwind from "./icons/Tailwind.astro";
import ReactIcon from "./icons/React.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Express from "./icons/Express.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Postgres from "./icons/Postgres.astro";
import NodeIcon from "./icons/Node.astro";

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#004855] text-white",
    icon: ReactIcon,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-[#0f1724] text-white",
    icon: Express,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#371271] text-white",
    icon: AstroIcon,
  },
  PRIVATE: {
    name: "Monolito (privado)",
    class: "bg-[#F59E0B] text-black",
    icon: Link,
  },
  POSTGRES: {
    name: "Postgres",
    class: "bg-[#0c4773] text-white",
    icon: Postgres,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#025100] text-white",
    icon: NodeIcon,
  },

};

const PROJECTS = [
  {
    title: "Ges2l — Plataforma modular para gestión",
    description:
      "Plataforma modular para administrar instituciones, deportes, presupuestos y más. Monolito privado en producción con stack PERN (Postgres, Express, React, Node), apps en Vite, landing en Astro; validación con Zod, ORM con Sequelize, linters/formateo con ESLint + Prettier y CSS propio para estilos.",
    link: "https://ges2l.com",
    image: "/projects/ges2l.webp",
    tags: [
      TAGS.POSTGRES,
      TAGS.EXPRESS,
      TAGS.REACT,
      TAGS.NODE,
      TAGS.TAILWIND,

    ],
  },
  {
    title: "Arduino Control Web — PWA para ESP32",
    description:
      "Interfaz web para controlar un ESP32 mediante WebSockets. Optimizaciones de red para baja latencia, modo Access Point y enfoque en UX para control en tiempo real.",
    link: "http://arduino.andrescuello.com",
    github: "https://github.com/adcuelloa/ESP32-Control-Web",
    image: "/projects/arduino-control.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Cuello.dev — Portfolio personal",
    description:
      "Sitio personal construido con Astro y Tailwind, optimizado para rendimiento, accesibilidad y animaciones suaves.",
    link: "https://cuello.dev",
    image: "/projects/cuello-dev.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>

          <div class="flex flex-wrap mt-2">
            <!-- tags: saltan como unidades, no hacen wrap interno -->
            <ul class="flex flex-wrap mb-2 gap-x-2 gap-y-2">
              {tags.map((tag) => (
                <li class="shrink-0">
                  <span
                    class={`inline-flex items-center whitespace-nowrap gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                    role="listitem"
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>

            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
