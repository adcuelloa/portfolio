---
import { languages, getLangFromUrl } from "@/i18n";
import ColombiaFlag from "@/components/icons/Colombia.astro";
import USAFlag from "@/components/icons/USA.astro";

const currentLang = getLangFromUrl(Astro.url);

const LANGUAGES = Object.entries(languages).map(([code, name]) => ({
  code,
  name,
}));
---

<div class="relative ml-1 mr-1">
  <button
    data-transition-persist
    id="language-toggle-btn"
    class="appearance-none border-none flex hover:scale-125 transition hover:cursor-pointer"
  >
    <span class="sr-only">Cambiar idioma / Change language</span>
    {
      currentLang === "es" ? (
        <ColombiaFlag class="size-5 rounded-sm" />
      ) : (
        <USAFlag class="size-5 rounded-sm" />
      )
    }
  </button>
  <div
    data-transition-persist
    id="languages-menu"
    class="absolute hidden scale-80 top-8 right-0 text-sm p-1 min-w-32 rounded-md border border-gray-100 bg-white/90 dark:bg-gray-900/90 dark:border-gray-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] backdrop-blur-md"
  >
    <ul>
      {
        LANGUAGES.map(({ code, name }) => (
          <li
            class="languages-menu-option px-2 py-1.5 cursor-pointer hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm"
            data-lang={code}
          >
            {name}
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  #languages-menu.open {
    display: inline;
    animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }

  @keyframes scale-up-center {
    from {
      transform: scale(0.8);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  const languagesMenu = document.getElementById("languages-menu");
  const languageToggleBtn = document.getElementById("language-toggle-btn");

  const getLanguagePreference = () => {
    return window.location.pathname.startsWith("/en") ? "en" : "es";
  };

  const updateActiveLanguageInMenu = () => {
    const currentLang = getLanguagePreference();
    document.querySelectorAll(".languages-menu-option").forEach((element) => {
      const lang = (element as HTMLElement).getAttribute("data-lang");
      if (lang === currentLang) {
        element.classList.add("text-blue-500", "font-semibold");
      } else {
        element.classList.remove("text-blue-500", "font-semibold");
      }
    });
  };

  document.addEventListener("click", () =>
    languagesMenu?.classList.remove("open")
  );

  languageToggleBtn?.addEventListener("click", (e) => {
    e.stopPropagation();

    const themesMenu = document.getElementById("themes-menu");
    if (themesMenu) {
      themesMenu.classList.remove("open");
    }

    updateActiveLanguageInMenu();

    const isClosed = !languagesMenu?.classList.contains("open");
    languagesMenu?.classList[isClosed ? "add" : "remove"]("open");
  });

  document.querySelectorAll(".languages-menu-option").forEach((element) => {
    element.addEventListener("click", (e) => {
      const lang =
        (e.target as HTMLElement).getAttribute("data-lang") ||
        (e.target as HTMLElement).closest("li")?.getAttribute("data-lang");

      if (lang) {
        localStorage.setItem("language", lang);

        const currentPath = window.location.pathname;
        const currentHash = window.location.hash;
        let newPath = currentPath;

        if (lang === "es") {
          newPath = currentPath.replace(/^\/en(\/|$)/, "/");
        } else if (lang === "en") {
          if (!currentPath.startsWith("/en")) {
            newPath = "/en" + (currentPath === "/" ? "/" : currentPath);
          }
        }

        if (newPath !== "/" && newPath.endsWith("/")) {
          newPath = newPath.slice(0, -1);
        }
        if (newPath === "") {
          newPath = "/";
        }

        // Construir URL completa con hash
        const finalUrl = currentHash ? `${newPath}/${currentHash}` : newPath;

        if (newPath !== currentPath) {
          window.location.href = finalUrl;
        }
      }
    });
  });
</script>
