---
import { languages, getLangFromUrl, ui } from "@/i18n";
import ColombiaFlag from "@/components/icons/Colombia.astro";
import USAFlag from "@/components/icons/USA.astro";

const currentLang = getLangFromUrl(Astro.url);

const LANGUAGES = Object.entries(languages).map(([code, name]) => ({
  code,
  name,
}));

// Serialize slugs for client-side use
const slugsData = {
  es: ui.es.slugs,
  en: ui.en.slugs,
};
const slugsJson = JSON.stringify(slugsData);
---

<div class="relative ml-1 mr-1 z-20" data-slugs={slugsJson}>
  <button
    data-transition-persist
    id="language-toggle-btn"
    class="appearance-none border-none flex hover:scale-125 hover:cursor-pointer transition"
  >
    <span class="sr-only">Cambiar idioma / Change language</span>
    {
      currentLang === "es" ? (
        <ColombiaFlag class="size-5 rounded-sm" />
      ) : (
        <USAFlag class="size-5 rounded-sm" />
      )
    }
  </button>
  <div
    data-transition-persist
    id="languages-menu"
    class="absolute hidden z-50 scale-80 top-8 right-0 text-sm p-1 min-w-32 rounded-md border border-gray-100 bg-white/90 dark:bg-gray-900/90 dark:border-gray-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] backdrop-blur-md"
  >
    <ul>
      {
        LANGUAGES.map(({ code, name }) => (
          <li
            class="languages-menu-option px-2 py-1.5 cursor-pointer hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm"
            data-lang={code}
          >
            {name}
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  #languages-menu.open {
    display: inline;
    animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }

  @keyframes scale-up-center {
    from {
      transform: scale(0.8);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  const languagesMenu = document.getElementById("languages-menu");
  let languageToggleBtn = document.getElementById("language-toggle-btn");
  if (!languageToggleBtn) {
    languageToggleBtn = document.querySelector("#language-toggle-btn");
  }

  const getLanguagePreference = () => {
    return window.location.pathname.startsWith("/en") ? "en" : "es";
  };

  const updateActiveLanguageInMenu = () => {
    const currentLang = getLanguagePreference();
    document.querySelectorAll(".languages-menu-option").forEach((element) => {
      const lang = element.getAttribute("data-lang");
      if (lang === currentLang) {
        element.classList.add("text-blue-500", "font-semibold");
      } else {
        element.classList.remove("text-blue-500", "font-semibold");
      }
    });
  };

  document.addEventListener("click", () =>
    languagesMenu?.classList.remove("open")
  );

  const toggleLanguageMenu = () => {
    const themesMenu = document.getElementById("themes-menu");
    if (themesMenu) {
      themesMenu.classList.remove("open");
    }

    updateActiveLanguageInMenu();

    const isClosed = !languagesMenu?.classList.contains("open");
    languagesMenu?.classList[isClosed ? "add" : "remove"]("open");
    if (languageToggleBtn)
      languageToggleBtn.setAttribute("aria-expanded", String(isClosed));
  };

  if (languageToggleBtn) {
    languageToggleBtn.addEventListener("click", function (e) {
      if (e && typeof e.stopPropagation === "function") e.stopPropagation();
      toggleLanguageMenu();
    });
  }

  // Reattach after swaps in case Astro replaces the node
  document.addEventListener("astro:after-swap", () => {
    const btn = document.getElementById("language-toggle-btn");
    if (btn && btn !== languageToggleBtn) {
      languageToggleBtn = btn;
      languageToggleBtn.addEventListener("click", toggleLanguageMenu);
    }
  });

  // Get slugs from data attribute
  const toggleWrapper = document.querySelector("[data-slugs]");
  const slugsData = toggleWrapper
    ? JSON.parse(toggleWrapper.getAttribute("data-slugs") || "{}")
    : {};

  // Helper to translate hash between languages
  // @ts-ignore - Parameters inferred from runtime usage
  const translateHash = (hash, fromLang, toLang) => {
    if (!hash || !hash.startsWith("#")) return "";

    const hashValue = hash.substring(1); // Remove #
    const fromSlugs = slugsData[fromLang] || {};
    const toSlugs = slugsData[toLang] || {};

    // Find which key maps to the current hash in the source language
    const matchingKey = Object.keys(fromSlugs).find(
      (key) => fromSlugs[key] === hashValue
    );

    // If found, return the translation; otherwise return the original hash
    if (matchingKey && toSlugs[matchingKey]) {
      return "#" + toSlugs[matchingKey];
    }

    return hash; // Keep original if no translation found
  };

  // Use event delegation on the menu so listeners survive Astro DOM swaps
  if (languagesMenu) {
    languagesMenu.addEventListener("click", (e) => {
      // prevent the document click handler from closing the menu before we run
      if (e && typeof e.stopPropagation === "function") e.stopPropagation();

      const target = e.target;
      const el = target instanceof Element ? target : null;
      const option = el ? el.closest(".languages-menu-option") : null;
      if (!option) return;

      const lang = option.getAttribute("data-lang");
      if (!lang) return;

      localStorage.setItem("language", lang);

      const currentPath = window.location.pathname;
      const currentHash = window.location.hash;
      const currentLang = currentPath.startsWith("/en") ? "en" : "es";
      let newPath = currentPath;

      if (lang === "es") {
        newPath = currentPath.replace(/^\/en(\/|$)/, "/");
      } else if (lang === "en") {
        if (!currentPath.startsWith("/en")) {
          newPath = "/en" + (currentPath === "/" ? "/" : currentPath);
        }
      }

      // Translate the hash to the new language
      const translatedHash = translateHash(currentHash, currentLang, lang);

      // Normalize path based on whether there's a hash
      if (translatedHash) {
        // Has hash: ensure path ends with /
        if (newPath === "/" || newPath === "/en") {
          newPath = newPath + (newPath.endsWith("/") ? "" : "/");
        } else {
          // For other paths, ensure trailing slash
          if (!newPath.endsWith("/")) {
            newPath = newPath + "/";
          }
        }
      } else {
        // No hash: remove trailing slash (except for root)
        if (newPath !== "/" && newPath.endsWith("/")) {
          newPath = newPath.slice(0, -1);
        }
      }

      if (newPath === "") newPath = "/";

      // Build final URL
      const finalUrl = newPath + translatedHash;

      window.location.href = finalUrl;
    });
  }
</script>
